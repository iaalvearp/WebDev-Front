---
import Layout from "../layouts/Layout.astro";
import HeaderClient from "../shared/components/HeaderClient";
import { Dulceria as DulceriaComponent } from "@/modules/snacks/components/Dulceria";
import { AppWrapper } from "@/shared/components/AppWrapper";
import { fade } from "astro:transitions";
---

<Layout>
  <AppWrapper client:load>
    <div transition:animate={fade({ duration: "300ms" })}>
      <HeaderClient client:load currentPage="dulceria" />
      <DulceriaComponent client:load />
    </div>
  </AppWrapper>
</Layout>
