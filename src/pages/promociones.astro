---
import Layout from "../layouts/Layout.astro";
import HeaderClient from "../shared/components/HeaderClient";
import { Promociones as PromocionesComponent } from "@/modules/marketing/components/Promociones";
import { AppWrapper } from "@/shared/components/AppWrapper";
import { fade } from "astro:transitions";
---

<Layout>
  <AppWrapper client:load>
    <div transition:animate={fade({ duration: "300ms" })}>
      <HeaderClient client:load currentPage="promociones" />
      <PromocionesComponent client:load />
    </div>
  </AppWrapper>
</Layout>
